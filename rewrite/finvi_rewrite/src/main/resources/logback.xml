<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- In-Memory Appender for Dashboard -->
    <appender name="MEMORY" class="com.tcn.sati.infra.logging.MemoryLogAppender"/>
    
    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="MEMORY"/>
    </root>
    
    <!-- Reduce noise from libraries -->
    <logger name="io.javalin" level="WARN"/>
    <logger name="io.grpc" level="WARN"/>
    <logger name="org.eclipse.jetty" level="WARN"/>
    
    <!-- Sati core logging -->
    <logger name="com.tcn.sati" level="DEBUG"/>
    <logger name="com.tcn.finvi" level="DEBUG"/>
</configuration>
